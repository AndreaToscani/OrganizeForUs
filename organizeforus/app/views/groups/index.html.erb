<p style="color: green"></p>

<h1>Your groups</h1>

<table class="table table-striped table-bordered table-hover">
  <thead class="table-dark">
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
<script type="text/javascript">
    function show(variabile) {
     if(document.getElementById(variabile).style.display=='') { 
      document.getElementById(variabile).style.display='none'; 
    }else{ 
      document.getElementById(variabile).style.display=''; 
    } 
    };
</script>
<script type="text/javascript">
    $(document).on('click', function (e) {
      if ($(e.target).closest("#box").length === 0 && $(e.target).closest("#button").length === 0 ) {
        $("#box").hide();
      }
    });
</script>





  <tbody>
    <% @groups.each do |group|%>
      <% if group.is_administrator?(current_user) || group.is_a_member?(current_user)%> <!--rende visibili i gruppi solo all' utente organizzatore o ai partecipanti del suddetto gruppo-->
        <tr>
          <td><%= group.name %>
          </td>
          <td><%= group.description %>
          </td>
          <% if group.user==current_user %>
          <td> Administrator </td>
          <% else %>
          <td> <%= Partecipation.where(group_id: group, user_id: User.where(email: current_user.email).take.id ).take.role %> </td>
          <% end %>
          <td><%= link_to 'Show group', group, class:"btn btn-secondary btn-sm" %>
          </td>
          <td><%= link_to 'Edit group',  edit_group_path(group), class:"btn btn-secondary btn-sm"%>
          </td>
          <td><button type="button" class="btn btn-danger btn-sm" id="button" onclick="show('box')">Delete group</button>
          </td>
          <div class="alert alert-danger" role="alert" id="box" style="display:none" >Are you sure?
          <%= button_to 'Delete group', group, class:"btn btn-danger btn-sm", method: :delete%>
          </div>
        </tr>
      <%end%>
    <% end %>
  </tbody>
</table>
<br>
<%=link_to 'Create new group', new_group_path, class:"btn btn-secondary"%>
