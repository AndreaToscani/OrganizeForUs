<p style="color: green"></p>

<h1>Your groups</h1>

<table class="table table-striped table-bordered table-hover">
  <thead class="table-dark">
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @groups.each do |group|%>
      <% if group.is_administrator?(current_user) || group.is_a_member?(current_user)%> <!--rende visibili i gruppi solo all' utente organizzatore o ai partecipanti del suddetto gruppo-->
        <tr>
          <td><%= group.name %>
          </td>
          <td><%= group.description %>
          </td>
          <% if group.user==current_user %>
          <td> Administrator </td>
          <% else %>
          <td> <%= Partecipation.where(group_id: group, user_id: User.where(email: current_user.email).take.id ).take.role %> </td>
          <% end %>
          <td><%= link_to 'Show group', group, class:"btn btn-secondary btn-sm" %>
          </td>
          <td><%= link_to 'Edit group',  edit_group_path(group), class:"btn btn-secondary btn-sm"%>
          </td>
          <td><%= button_to 'Delete group', group, class:"btn btn-danger btn-sm", method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
      <%end%>
    <% end %>
  </tbody>
</table>
<br>
<%=link_to 'Create new group', new_group_path, class:"btn btn-secondary"%>
