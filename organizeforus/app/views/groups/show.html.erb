
  <p style="color: green"></p>

  <div class="jumbotron">
  <div style="text-align: right">
  <%=link_to 'Member List', show_member_url(@group) %>
  </div>
  <% if @group.work==true%>
    <h1> Work Group </h1>
  <% end %>

  <h1 class="display-5"><%= @group.name %></h1>
  <p class="lead"><%= @group.description %></p>
  <hr class="my-4"> </hr>

  <% if @group.work==true && @group.user==current_user%>
  <div class="container">
    <h5> Roles </h5>
      <div class="row row-cols-auto">
        <% @group.roles.each do |role| %>
          <div class="col align-self-start">
              <%= role.tag %> <br>
              <%= link_to "Destroy", [:destroy, role.group, role], data: {
                turbo_method: :delete,
                turbo_confirm: "Are you sure?"
              } %>
          </div> 
        <% end %>
      </div> </div>
   <% else %>
    <% if @group.has_driver? %>
       <div class="row">
       <div class="col-3">
        <h6> Designeted Driver </h6> </div>
        <div class="col">
         <%= @group.driver %> </div>
       </div>
    <% end %> 

      <br>
  <% end %>



  <%= link_to "Edit group", edit_group_path(@group), class:"btn btn-secondary" %> 
  <%= link_to "Back to your groups", groups_path, class:"btn btn-secondary" %>
  <br><br>
   
  <%= link_to "Set organizzation", groups_path, class:"btn btn-secondary" %>  
