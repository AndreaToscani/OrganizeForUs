<%= form_with model: [ @group, @group.posts.build ] ,  multiple: true do |form| %>
    <br>
    <% if action_name=="new"%>
    <div class="row ; mb-2">
        <div class="col-1">
            <%= form.label :title, "Title: " %></div>
        <div class="col-2">
            <%= form.text_field :title %>
        </div>
    </div>
    <div class="row ; mb-2">
        <div class="col-1">
            <%= form.label :body, "Text: " %> </div>
        <div class="col-2">
            <%= form.text_area :body, size: "50x4" %> 
        </div>
    </div>
    <div class="row ; mb-2">
    <div class="col-2" >
       <%= form.file_field :files, multiple: true,  size: "50x4", class:"bi bi-paperclip" %>
    </div>
    </div>
    <div class="row ; mt-3; mb-1" style="width:20%" >
        <%= form.text_field :user_id , type:"hidden" , value:current_user.id %>
        <%= form.submit "New Post" , class: "btn btn-sm"%>
    </div>
    <% elsif action_name =="edit" %>
efjwek
    <%end%>

<%end%>
