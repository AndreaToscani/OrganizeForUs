<% content_for :head do %>
  <%= javascript_import_module_tag "img_preview" %>
<% end %>

<h1 class="display-6">Edit profile <% resource_name.to_s.humanize %></h1>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), multipart: true, html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
   
  <div class="field form-group">
    <div class="row">
      <div class="col-sm-4">
        <%= image_tag user_avatar(resource, 200), class: "rounded-circle" %>
        <%= image_tag "red-arrow.jpg", :size => "200x180", hidden: true, class: "rounded-circle", id:"imgOut" %>
        <%= image_tag user_avatar(resource, 200), :size => "200x180", hidden: true, class: "rounded-circle", id:"imgOut" %>
      </div>

      <div class="field form-group">
        <%= f.file_field :avatar, clas:"input form-controll"%>
        <!--%= f.file_field :avatar, hide_label: true, help: "PNG or JPG only", id:"imgInp" %-->

      </div>
    </div>
  </div>
   
  <div class="field form-group">
    <%= f.label :name, required: false %><br />
    <%= f.text_field :name, disbled: true, class:"input form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label :surname, required: false %><br />
    <%= f.text_field :surname, class:"input form-control" %>
  </div>

<div class="field form-group">
    <%= f.label :Username %><br />
    <%= f.text_field :username, class:"input form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label :Birthday %><br />
    <%= f.date_field :birthday, as: :date, html5: true, class:"form-control" %> 
  </div>

  <div class="field form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field form-group">
    <%= f.label :new_password %> <br />
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label :repeat_password %> <br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label :current_password %> <br />
    <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
  </div>
  </br>
  <div class="actions">
    <%= f.submit "Update", class:"btn btn-secondary"%>
  </div>
<% end %>
</br>

<br/>

<div class="card">
  <h5 class="card-header">Cancel my account</h5>
  <div class="card-body">
    <h5 class="card-title">Unhappy?</h5>
    <!--<p class="card-text">With supporting text below as a natural lead-in to additional content.</p>-->
    <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class:"btn btn-danger" %>
  </div>
</div>

<br/>

<%= link_to "Back", :back , class:"btn btn-secondary"%>