<h2>Completing the Sign Up</h2>

<%= form_for(@user, url: user_auth_facebook_callback_after_social_connection_path(@user)) do |f| %>
  <%=  render "devise/shared/error_messages", resource: @user  %>


  <div class="field form-group">
    <div class="row">
      <div class="col-sm-4">
        <%= image_tag user_avatar(@user, 50), class: "rounded-circle" %>
      </div>

      <div class="field form-group">
        <%= f.file_field :avatar, direct_upload: true, class:"input form-control"%>
  
        <% if resource.avatar.attached? && resource.valid? %>
          <%= f.label :remove_image %>
          <%= f.check_box :remove_image, default: 0%>
        <% end %>
      </div>
    </div>
  </div>

  <div class="field form-group">
    <%= f.label :name %><br />
    <%= f.text_field :name,  class:"input form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label :surname %><br />
    <%= f.text_field :surname,  class:"input form-control" %>
  </div>

<div class="field form-group">
    <%= f.label :Username %><br />
    <%= f.text_field :username, class:"input form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label :Birthday %><br />
    
    <%= f.date_field :birthday, as: :date, html5: true, class:"form-control" %> 
  </div>

  <div class="field form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
  </div>

  <div class="field form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
  </div>
  <br/>

  <div class="actions">
    <%= f.submit "Complete", class: "btn btn-secondary" %>
  </div>
  
<% end %>